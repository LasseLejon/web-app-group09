<h1>Return Scanner</h1>

{{#if errors.length}}
    <ul>
        {{#each errors}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
{{/if}}

{{#if scanner}}
    {{#if scanner.returnDate}}
        <p>This scanner is not in use</p>
    {{else}}
        <form action="/scanner/return/{{scanner.scannerId}}" method="post">
            <p>Are you sure you wan't to return scanner {{scanner.scannerId}}</p>
            <div>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <button type="submit">Return</button>
            </div>
        </form>
    {{/if}}
{{else}}
    <p>That specific scanner does not exist</p>
{{/if}}