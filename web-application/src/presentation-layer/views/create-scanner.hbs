<h1>Create scanner</h1>
{{#if errors.length}}
    <ul>
        {{#each errors}}
            <li>
                {{this}}
            </li>
        {{/each}}
    </ul>
{{/if}}

<form action="/scanner/create" method="post">
    <div>
        Scanner Number<br>
        <input type="text" name="scannerNumber">
    </div>
    <div>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button type="submit">Create</button>
    </div>
</form>